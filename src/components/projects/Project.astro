---
import { Icon } from 'astro-icon/components';
import { Image } from 'astro:assets';

interface Props {
    title: string;
    description: string;
    image: string;
    tags: string[];
    curseforge: string;
    modrinth: string;
}

const { title, description, image, tags, curseforge, modrinth } = Astro.props;
---

<div class="w-[300px] p-4">
    <div class="bg-gray-100 rounded-lg h-full flex flex-col">
        <Image
            class="rounded w-full object-cover object-center"
            src={`/logos/${image}`}
            alt="Project logo"
            width="300"
            height="300"
        />
        <div class="py-4 px-6 flex flex-col flex-1">
            {
                !!tags.every((tag) => tag !== '') && (
                    <div class="flex items-center space-x-2 mb-4">
                        {tags.map((tag) => (
                            <span class="bg-gray-100 text-gray-800 text-xs font-medium px-2.5 py-0.5 rounded-full dark:bg-gray-700 dark:text-gray-300">
                                {tag}
                            </span>
                        ))}
                    </div>
                )
            }

            <h2 class="text-lg text-gray-900 font-medium title-font mb-2">
                {title}
            </h2>
            <p class="leading-relaxed text-sm mb-4">
                {description}
            </p>
            <div class="flex-1"></div>
            <div class="flex items-center justify-end flex-wrap gap-3 mt-5">
                {
                    !!curseforge && (
                        <a
                            href={curseforge}
                            target="_blank"
                            rel="noopener noreferrer"
                            class="p-2.5 text-lg font-medium text-center inline-flex items-center text-white rounded bg-[#F16436] hover:bg-[#cf3e0e]"
                        >
                            <Icon name="simple-icons:curseforge" class="text-white" />
                        </a>
                    )
                }
                {
                    !!modrinth && (
                        <a
                            href={modrinth}
                            target="_blank"
                            rel="noopener noreferrer"
                            class="p-2.5 text-lg font-medium text-center inline-flex items-center text-white rounded bg-[#00AF5C] hover:bg-[#008345]"
                        >
                            <Icon name="simple-icons:modrinth" class="text-white" />
                        </a>
                    )
                }
            </div>
        </div>
    </div>
</div>
