---
import { SITE_TITLE } from '../consts';
import IconButton from './IconButton.astro';
---

<header class="container mx-auto py-8 md:px-2 flex justify-between items-center">
    <div class="flex items-center space-x-2">
        <svg
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 24 24"
            class="text-amber-500 w-9 h-9"
            ><g
                fill="none"
                stroke="currentColor"
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                ><path
                    d="M21 16.008V7.99a1.98 1.98 0 0 0-1-1.717l-7-4.008a2.02 2.02 0 0 0-2 0L4 6.273c-.619.355-1 1.01-1 1.718v8.018c0 .709.381 1.363 1 1.717l7 4.008c.62.354 1.38.354 2 0l7-4.008c.619-.355 1-1.01 1-1.718M12 22V12m0 0l8.73-5.04m-17.46 0L12 12m0 5l3.003-1.668m3-1.667L21 12m-9 5l-9-5"
                ></path><path d="m15 17l3-1.67v-3L15 14z"></path></g
            ></svg
        >
        <div class="text-2xl font-bold text-gray-800-900 text-center">
            {SITE_TITLE}
        </div>
    </div>
    <nav class="flex justify-center flex-wrap gap-4">
        <IconButton
            title="Curseforge"
            href="https://www.curseforge.com/members/silentdoom/projects"
            icon="curseforge"
        />
        <IconButton
            title="Modrinth"
            href="https://modrinth.com/user/SilentDoom"
            icon="modrinth"
        />
        <IconButton
            title="Github"
            href="https://github.com/SilentDoom-Minecraft/website"
            icon="github"
        />
    </nav>
</header>
