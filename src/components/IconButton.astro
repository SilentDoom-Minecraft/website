---
import { Icon } from 'astro-icon/components';

interface Props {
    title: string;
    href: string;
    icon: string;
}

const { href, title, icon } = Astro.props;
---

<a
    class="flex items-center justify-center space-x-2.5 px-4 py-2 text-slate-600 hover:text-slate-50 border-2 border-slate-600 rounded transition fill-slate-50 hover:bg-slate-600 w-full sm:w-fit max-w-[225px]"
    href={href}
    target="_blank"
    rel="noopener noreferrer"
>
    <Icon name=`simple-icons:${icon}` class="w-4 h-4" />
    <h4 class="uppercase text-md font-bold">{title}</h4>
</a>
